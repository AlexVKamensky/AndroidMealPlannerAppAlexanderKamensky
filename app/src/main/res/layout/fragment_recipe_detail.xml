<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeDetailFragment">


    <TextView
        android:id="@+id/recipeDetailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/hello_blank_fragment"
        android:padding="10dp"
        android:textSize="20dp"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/recipeDetailImage"
        android:layout_width="124dp"
        android:layout_height="160dp"
        android:layout_below="@+id/recipeDetailName"
        android:padding="10dp"
        android:src="@drawable/ic_lemon" />

    <TextView
        android:id="@+id/recipeDetailIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/recipeDetailImage"
        android:layout_alignBottom="@+id/recipeDetailImage"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/recipeDetailDirections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/recipeDetailImage"
        android:textColor="#000000"
        />


</RelativeLayout>